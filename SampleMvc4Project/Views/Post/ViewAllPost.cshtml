@model IEnumerable<SampleMvc4Project.Entitys.Post>

@{
    ViewBag.Title = "Posts";
}

<h2>Posts</h2>

<h1>@Html.ActionLink("Create a post","CreatePost","Post",new{@id=ViewBag.id},null)</h1>

<table>
    <tr>
        <td>Date</td>
        <td>Title</td>
        <td>View</td>
        <td>Edit</td>
        <td>Delete</td>
    </tr>
    @foreach (var post in Model)
    {
        <tr>
            <td>@post.DateCreate.ToShortDateString()</td>
            <td>@post.Title</td>
            <td>@Html.ActionLink("View","ViewAPost","Post",new{@id= post.Id},null)</td>
            <td>@Html.ActionLink("Edit","EditPost","Post",new{@id= post.Id},null)</td>
            <td>@Html.ActionLink("Delete","DeletePost","Post",new{@id= post.Id},null)</td>
        </tr>
    }
</table>
